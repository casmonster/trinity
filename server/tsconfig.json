{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
   "include": [
    "**/*.ts",      
    "../shared/**/*.ts",   
    "../vite.config.ts"    
  ],
  "exclude": [
    "dist"
  ]
}
