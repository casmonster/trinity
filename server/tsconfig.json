{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "../dist/server",
    "rootDir": "../server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
   "include": [
    "../server/**/*.ts",      
    "../shared/**/*.ts",      
  ],
  "exclude": [
    "../dist",
    "node_modules",
  ]
}
