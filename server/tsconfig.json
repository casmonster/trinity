{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "../dist/server",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "../shared/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist"
  ]
}
