{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "../dist/server",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
   "include": [
    "server/**/*.ts",      
    "../shared/**/*.ts",   
    "../vite.config.ts"    
  ],
  "exclude": [
    "../dist"
  ]
}
